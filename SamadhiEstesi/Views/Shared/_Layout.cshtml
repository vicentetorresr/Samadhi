<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Samadhi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        :root {
            --dark-red-primary: rgba(84, 15, 15, 0.9);
            --dark-red-secondary: rgba(58, 10, 10, 0.7);
            --text-light: rgba(255, 230, 230, 0.9);
            --border-color: rgba(120, 30, 30, 0.6);
        }
        body {
            background-color: var(--dark-red-primary);
            color: var(--text-light);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .navbar {
            background-color: var(--dark-red-secondary) !important;
            border-bottom: 2px solid var(--border-color);
        }
        .navbar-brand {
            color: var(--text-light) !important;
            font-weight: bold;
        }
        .nav-link {
            color: var(--text-light) !important;
            transition: all 0.3s ease;
        }
        .nav-link:hover {
            color: rgba(255, 255, 255, 1) !important;
            transform: scale(1.05);
        }
        .container {
            background-color: rgba(48, 10, 10, 0.5);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.3);
        }
        .footer {
            background-color: var(--dark-red-secondary);
            color: var(--text-light);
            border-top: 2px solid var(--border-color);
        }
        .footer a {
            color: rgba(255, 150, 150, 0.9);
            text-decoration: none;
        }
        .footer a:hover {
            color: rgba(255, 180, 180, 1);
            text-decoration: underline;
        }
    </style>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SamadhiEstesi.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Samadhi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">


                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AntecedentesMedicoes" asp-action="Index">AntecedentesMedicos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Asistenciums" asp-action="Index">Asistencias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Personas" asp-action="Index">Personas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="RegistrosHistoricoes" asp-action="Index">RegistrosHistoricos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Rutinas" asp-action="Index">Rutinas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tokens" asp-action="Index">Tokens</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SamadhiStrong - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>