@model IEnumerable<SamadhiEstesi.Modelos.Persona>
@{
    ViewData["Title"] = "Listado de Personas";
}

<style>
    .personas-container {
        background-color: rgba(48, 10, 10, 0.5);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.3);
    }
    .table {
        color: rgba(255, 230, 230, 0.9);
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
    }
    .table thead {
        background-color: rgba(84, 15, 15, 0.8);
        color: rgba(255, 255, 255, 0.9);
    }
    .table th, .table td {
        padding: 12px;
        border-bottom: 1px solid rgba(120, 30, 30, 0.4);
    }
    .table tbody tr:nth-child(even) {
        background-color: rgba(58, 10, 10, 0.3);
    }
    .table tbody tr:hover {
        background-color: rgba(84, 15, 15, 0.4);
        transition: background-color 0.3s ease;
    }
    .btn {
        display: inline-block;
        padding: 8px 15px;
        margin: 4px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease;
    }
    .btn-create {
        background-color: rgba(30, 120, 30, 0.7);
        color: rgba(255, 255, 255, 0.9);
    }
    .btn-create:hover {
        background-color: rgba(40, 140, 40, 0.9);
    }
    .btn-edit {
        background-color: rgba(30, 30, 120, 0.7);
        color: rgba(255, 255, 255, 0.9);
    }
    .btn-edit:hover {
        background-color: rgba(40, 40, 140, 0.9);
    }
    .btn-details {
        background-color: rgba(120, 120, 30, 0.7);
        color: rgba(255, 255, 255, 0.9);
    }
    .btn-details:hover {
        background-color: rgba(140, 140, 40, 0.9);
    }
    .btn-delete {
        background-color: rgba(120, 30, 30, 0.7);
        color: rgba(255, 255, 255, 0.9);
    }
    .btn-delete:hover {
        background-color: rgba(140, 40, 40, 0.9);
    }
    .page-title {
        color: rgba(255, 230, 230, 0.9);
        text-align: center;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }
    .actions-cell {
        display: flex;
        justify-content: center;
        gap: 10px;
    }
</style>

<div class="personas-container">
    <h1 class="page-title">Listado de Personas</h1>
    <p>
        <a asp-action="Create" class="btn btn-create">Crear Nuevo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>RUT</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Fecha Nacimiento</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Rut)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                    <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdRolNavigation.IdRol)</td>
                    <td class="actions-cell">
                        <a asp-action="Edit" asp-route-id="@item.IdPersona" class="btn btn-edit">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdPersona" class="btn btn-details">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdPersona" class="btn btn-delete">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>